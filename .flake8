[flake8]
max-line-length = 100
extend-ignore = E203, W503, E501
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    .tox,
    dist,
    build,
    node_modules,
    .mypy_cache
per-file-ignores =
    __init__.py:F401
    tests/*:S101
max-complexity = 10
import-order-style = google
application-import-names = context_store
