# TeamAI Voice Platform Configuration
# Copy to .env.voice and fill in your values

# LiveKit Configuration
LIVEKIT_API_KEY=APIxxxxxxxxxxxxx
LIVEKIT_API_SECRET=secretxxxxxxxxxxxxx
LIVEKIT_WEBHOOK_URLS=

# MCP Server (uses existing context-store)
MCP_SERVER_URL=http://context-store:8000

# Sprint 13: API Key Authentication
# REQUIRED if veris-memory has AUTH_REQUIRED=true
# Format: Any string starting with vmk_ (e.g., vmk_voicebot_prod_key)
# Must be configured on MCP server side as:
#   API_KEY_VOICEBOT=vmk_voicebot_prod_key:voice_bot:writer:true
# Leave empty if AUTH_REQUIRED=false on MCP server
MCP_API_KEY=

# Sprint 13: Author Attribution
# Prefix for author field in stored contexts (author will be: {prefix}_{user_id})
# Default: voice_bot (results in authors like: voice_bot_alice, voice_bot_bob)
VOICE_BOT_AUTHOR_PREFIX=voice_bot

# Sprint 13: Retry Logic (learned from veris-memory PR #3)
# Enable retry with exponential backoff for improved reliability
# PR #3 showed retry reduces error rate from 98% to <5%
ENABLE_MCP_RETRY=true
MCP_RETRY_ATTEMPTS=3

# Speech-to-Text Provider (deepgram, whisper, google)
STT_PROVIDER=deepgram
STT_API_KEY=your_stt_api_key_here

# Text-to-Speech Provider (elevenlabs, google, azure)
TTS_PROVIDER=elevenlabs
TTS_API_KEY=your_tts_api_key_here

# Service Configuration
LOG_LEVEL=info

# Redis (for session state)
REDIS_URL=redis://redis:6379
