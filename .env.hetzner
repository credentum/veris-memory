# Environment configuration for Hetzner dedicated server deployment
# Copy to .env and fill in actual values

# Database passwords (required)
NEO4J_PASSWORD=your_secure_neo4j_password_here

# Tailscale configuration (required)
TAILSCALE_AUTHKEY=tskey-auth-your-tailscale-auth-key-here
TAILSCALE_HOSTNAME=veris-memory-hetzner

# Hardware profile
HARDWARE_PROFILE=hetzner-dedicated
MEMORY_PROFILE=64gb
CPU_PROFILE=6core-ryzen5600x
STORAGE_PROFILE=raid1-nvme

# Network configuration
DOCKER_NETWORK=context-store-network

# Resource limits (Docker Compose will use these)
CONTEXT_STORE_MEMORY_LIMIT=16G
CONTEXT_STORE_CPU_LIMIT=2.0
QDRANT_MEMORY_LIMIT=20G
QDRANT_CPU_LIMIT=4.0
NEO4J_MEMORY_LIMIT=24G
NEO4J_CPU_LIMIT=3.0
REDIS_MEMORY_LIMIT=10G
REDIS_CPU_LIMIT=1.0

# Backup configuration
BACKUP_RETENTION_DAYS=7
BACKUP_SCHEDULE="0 2 * * *"

# Monitoring configuration
MONITOR_CPU_THRESHOLD=70
MONITOR_MEMORY_THRESHOLD=90
MONITOR_DISK_THRESHOLD=85
MONITOR_INTERVAL=30

# Performance tuning
QDRANT_MAX_SEARCH_THREADS=8
QDRANT_SEGMENT_NUMBER=8
QDRANT_WAL_CAPACITY_MB=2048

NEO4J_HEAP_SIZE=20G
NEO4J_PAGECACHE_SIZE=16G
NEO4J_QUERY_CACHE_SIZE=32768

REDIS_MAXMEMORY=8gb
REDIS_MAXMEMORY_POLICY=allkeys-lru

# Security configuration
ALLOWED_NETWORKS=100.64.0.0/10
UFW_DEFAULT_POLICY=deny
