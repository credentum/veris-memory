FROM python:3.13-slim@sha256:85dfbf1b566b7addfe645faea9938e81a0a01a83580b0ea05fb23706357d77fb

WORKDIR /app

# Install system dependencies and security updates
RUN apt-get update && apt-get install -y \
    curl \
    && apt-get upgrade -y \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements first for better caching
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy source code
COPY src/ ./src/
COPY config/ ./config/

# Create necessary directories
RUN mkdir -p /var/lib/sentinel

# Environment variables (configured via docker-compose)
ENV PYTHONPATH="/app"

# Health check endpoint
HEALTHCHECK --interval=30s --timeout=10s --start-period=30s --retries=3 \
  CMD curl -f http://localhost:9090/status || exit 1

# Expose API port
EXPOSE 9090

# Run Sentinel with standalone mode
CMD ["python", "-m", "src.monitoring.sentinel", "--standalone", "--api-port", "9090"]