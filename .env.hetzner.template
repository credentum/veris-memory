# Hetzner Context Store Environment Configuration Template
# Copy this file to .env and configure with your values

# Neo4j Database Configuration
NEO4J_PASSWORD=your_secure_neo4j_password_here

# Tailscale Network Configuration (Optional)
TAILSCALE_AUTHKEY=your_tailscale_auth_key_here
TAILSCALE_HOSTNAME=veris-memory-hetzner

# MCP Server Configuration
MCP_SERVER_PORT=8000
LOG_LEVEL=info

# Hardware Profile (Auto-detected by deployment script)
HARDWARE_PROFILE=hetzner-dedicated
MEMORY_PROFILE=64gb
CPU_PROFILE=6core-ryzen5600x
STORAGE_PROFILE=raid1-nvme

# Security Configuration
API_KEY_REQUIRED=true
RATE_LIMITING_ENABLED=true
CORS_ENABLED=false

# Monitoring Configuration
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true
SECURITY_MONITORING_ENABLED=true