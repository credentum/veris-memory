{
  "name": "test_search",
  "description": "Test search functionality across different backends",
  "inputSchema": {
    "type": "object",
    "properties": {
      "query": {
        "type": "string",
        "description": "Search query text",
        "minLength": 1
      },
      "backend": {
        "type": "string",
        "enum": ["text", "vector", "graph", "hybrid"],
        "default": "text",
        "description": "Backend to use for search (text, vector, graph, hybrid)"
      },
      "limit": {
        "type": "integer",
        "minimum": 1,
        "maximum": 100,
        "default": 5,
        "description": "Maximum results to return"
      }
    },
    "required": ["query"]
  },
  "outputSchema": {
    "type": "object",
    "properties": {
      "success": {
        "type": "boolean",
        "description": "Whether the search test was successful"
      },
      "query": {
        "type": "string",
        "description": "The search query that was executed"
      },
      "backend": {
        "type": "string",
        "description": "Backend used for the search"
      },
      "limit": {
        "type": "integer",
        "description": "Maximum results limit applied"
      },
      "results": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "score": {
              "type": "number",
              "description": "Search relevance score"
            },
            "text": {
              "type": "string",
              "description": "Matched text content (truncated to 200 characters)"
            },
            "source": {
              "type": "string",
              "description": "Source identifier of the result"
            },
            "matched_terms": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "Terms that matched in the search"
            },
            "backend": {
              "type": "string",
              "description": "Backend that provided this result"
            }
          }
        },
        "description": "Array of search results"
      },
      "result_count": {
        "type": "integer",
        "description": "Number of results returned"
      },
      "message": {
        "type": "string",
        "description": "Optional message (e.g., when no documents found)"
      },
      "error": {
        "type": "string",
        "description": "Error message if search test failed"
      }
    },
    "required": ["success"]
  }
}